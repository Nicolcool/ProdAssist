<UserControl x:Class="ProdAssist.Views.Production"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProdAssist.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- GRID DEFINITION -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ROW 0 -->
        <Rectangle Grid.Row="0" Fill="Red"/>
        <TextBlock Grid.Row="0" Text="Menu" HorizontalAlignment="Center"/>

        <!-- ROW 1 -->
        <Rectangle Grid.Row="1" Fill="Pink"/>
        <TextBlock Grid.Row="1" Text="HELLO WORLD!" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Height="50" Width="120" Margin="340,289,340,95" Content="OK" Command="{Binding NavigateCommand}"/>


    </Grid>
</UserControl>
